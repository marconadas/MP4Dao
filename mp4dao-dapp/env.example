MAINNET_CONTRACT_ADDRESS=

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://mp4dao:password@localhost:5432/mp4dao_db
REDIS_URL=redis://localhost:6379

# ==============================================
# API CONFIGURATION
# ==============================================
PORT=3001
NODE_ENV=development
API_PREFIX=api/v1
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ==============================================
# STORAGE CONFIGURATION
# ==============================================
# IPFS Configuration
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# Arweave Configuration
ARWEAVE_KEY=your_arweave_key
ARWEAVE_GATEWAY=https://arweave.net

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=mp4dao-storage

# ==============================================
# ENCRYPTION CONFIGURATION
# ==============================================
ENCRYPTION_KEY=your-256-bit-encryption-key-change-this
AES_ALGORITHM=aes-256-gcm

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# Web3 Authentication
WEB3_MESSAGE_PREFIX="Mp4Dao Authentication"
SESSION_SECRET=your-session-secret-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@mp4dao.ao

